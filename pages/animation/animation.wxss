.video{
  min-height: 720rpx;
  background-color: #343434;
}
.video-title{
  text-align: center;
  color: #bbb;
}
#videoPlay{
  width: 100%;
}
.btn-area{
  position: relative;
  height: 70rpx;
  margin-bottom:8rpx;
}
.danmu-input{
  height: 66rpx;
  padding-left: 20rpx;
  font-size: 40rpx;
  padding-right:  120rpx;
  background: #646464;
  color: #ddd;
  line-height: 66rpx;
}
.danmu-btn{
  position: absolute;
  right: 5rpx;
  width: 100rpx;
  height: 66rpx;
  background-color: #58CE50;
  top: 0;
  padding: 0;
  line-height: 66rpx;
}
.btn-nex-pre{
  border: 1px solid #646464;
  color: #999;
  width: 250rpx;
  margin-left: 20rpx;
  background: transparent;
  font-weight: bold;
  height: 90rpx;
}
.btn-pre{
  float: left;
  margin-left: 20rpx;
}
.btn-nex{
  float: right;
  margin-right: 20rpx;
}
.box-container{
  width: 100%;
  height: 400rpx;
  border-bottom: 1px solid #646464;
  margin-bottom: 50rpx;
}
.box{
  margin: 100rpx auto;
  background-color: #00Da80;
  width: 200rpx;
  height: 200rpx;
}
.btn-container{
  display: flex;
  flex-flow: row wrap;
  justify-content: center;
}
.animate-btn{
  border: 1px solid #646464;
  color: #999;
  width: 300rpx;
  margin-bottom: 20rpx;
  font-weight: bold;
  height: 90rpx;
  /*float: left;*/
}